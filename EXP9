#include <stdio.h>

int main() {
    int arr[100], n, item, low, high, mid, i;
    
    printf("Enter number of elements (sorted order): ");
    scanf("%d", &n);

    printf("Enter the elements in sorted order:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the number to search: ");
    scanf("%d", &item);

    low = 0;
    high = n - 1;

    while (low <= high) {
        mid = (low + high) / 2;

        if (arr[mid] == item) {
            printf("Element %d found at position %d.\n", item, mid + 1);
            return 0;
        }
        else if (item < arr[mid]) {
            high = mid - 1;
        }
        else {
            low = mid + 1;
        }
    }

    printf("Element %d not found in the array.\n", item);

    return 0;
}
